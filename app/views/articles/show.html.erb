<h2>Articles</h2>
<% if @article %>
	<p>
	<strong>Title:</strong>
	<%= @article.title %>
	</p>

	<p>
	<strong>Body:</strong>
	<%= @article.body %>
	</p>
	<% if user_signed_in?%>
		<ul>
			<li>
				<%= link_to "Edit", edit_user_article_path(@article.user_id, @article.id) %></li>
			<li>
				<%= link_to "Destroy", 
					user_article_path,
					method: :delete,
					data: { confirm: "Are you sure?" } %>
			</li>
		</ul>
	<% end %>
	<% if flash[:alert] %>
		<%= flash[:alert] %>
		<% flash[:alert] = nil %>
	<% end %>

<% end %>
